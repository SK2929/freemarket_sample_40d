      - @items.each do |item|
        .items-box
          = link_to user_buy_screen_item_path(item) do
            %figure.items-box-photo
              = image_tag item.image.url
            .items-box-body
              .items-box-namefont
                = item.name
            .items-box-price
              .items-box-price-font
                = "Â¥" + item.price
                %p.items-box-tax
