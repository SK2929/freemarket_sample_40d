.confirm-box
  %header
    %h1
      = link_to image_tag('mercari_logo.svg', alt: 'mercari', width: '185', height: '49'), root_path
  .confirm-box-main
    .confirm-box-main__buy
      %h2.buy-header
        購入を確定しますか?
      .buy-content
        .buy-content-inner
          %h3.buy-item-image
            item image
          %p.buy-item-name
            item name
          %form.buy-form
            %p.buy-price
              ¥ 8,500
              %span.shipping-fee
                送料込み
            %ul.buy-price-table
              %li.buy-price-cell
                支払金額
              %li.buy-price-cell
                ¥ 8,500
            %button.buy-item-btn
              購入する
      .buy-content-user-info
        .buy-content-inner
          %h3
            配送先
          ここに配送先住所
          名前
      .buy-content-user-info__pay-method
        .buy-content-inner
          %h3
            支払方法
          ここにカード情報
