%header.header-form
  .header-form__inner
    .inner-search-bar
      .inner-search-bar__left
        .logo
          = link_to image_tag('mercari_logo.svg', alt: 'mercari', width: '134', height: '36'), root_path
      .inner-search-bar__right
        %input{type: "search", placeholder: 'キーワードから探す'}
    .inner-nav-bar
      .nav-left
        %ul
          %li
            カテゴリーから探す
          %li
            ブランドから探す
      .nav-right
        %ul.user-nav
        - if user_signed_in?
          %li
            マイページ
          %li
            お知らせ
          %li
            やることリスト
        - else
          %li
            = link_to 'ログイン', new_user_session_path, class: 'btn btn-login'
          %li
            = link_to '新規会員登録', new_user_registration_path, class: 'btn btn-signup'
