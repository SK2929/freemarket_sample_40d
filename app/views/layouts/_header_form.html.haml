%header.header-form
  .header-form__inner
    .inner-search-bar
      .inner-search-bar__left
        .logo
          = link_to image_tag('mercari_logo.svg', alt: 'mercari', width: '134', height: '36'), root_path
      .inner-search-bar__right
        = form_tag search_items_path, method: 'get' do
          = text_field_tag :search, '', class: 'input'
          = submit_tag '検索'
    .inner-nav-bar
      .nav-left
        %ul.nav-left__search
          %li.nav-left__search-dropdown
            = link_to 'カテゴリーから探す', categories_path, id: 'modal-open', class: 'button-link', remote: true
          %li.nav-left__search-dropdown
            ブランドから探す
      .nav-right
        %ul.user-nav
        - if user_signed_in?
          %li
            = link_to 'マイページ', users_path
          %li
            お知らせ
          %li
            やることリスト
        - else
          %li
            = link_to 'ログイン', new_user_session_path, class: 'btn btn-login'
          %li
            = link_to '新規会員登録', signup_users_path, class: 'btn btn-signup'
#modal-content
  = render 'categories/index'
  %p
    = link_to '閉じる', id: 'modal-close', class: 'button-link'
