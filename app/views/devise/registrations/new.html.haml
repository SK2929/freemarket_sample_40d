.single-container
  %header.new-user-form
    .new-user-form__logo
      = link_to image_tag('mercari_logo.svg', alt: 'mercari', width: '185', height: '49'), root_path
      -#progress barは未実装
    %nav.progress-bar-signup
  .new-user-form__main
    .new-user-container
      %h2.new-user-container__header
        会員情報入力
      .new-user-registration-form
        .new-user-registration-form__inner
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = devise_error_messages!
            .field.form-group
              = f.label :ニックネーム
              %span.form-require
                必須
              %br/
              = f.text_field :nickname, autofocus: true, class: 'input-default', placeholder: 'ニックネーム'
            .field.form-group
              = f.label :メールアドレス
              %span.form-require
                必須
              %br/
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-default', placeholder: 'PC・携帯どちらでも可'
            .field.form-group
              = f.label :パスワード
              %span.form-require
                必須
              = f.password_field :password, autocomplete: "new-password", class: 'input-default', placeholder: '6文字以上'
            .field.form-group
              = f.label :パスワード
              (確認)
              %span.form-require
                必須
              %br/
              = f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-default', placeholder: '6文字以上'
            .field.form-group
              = f.label :お名前
              %span.form-require
                必須
              %br/
              = f.text_field :first_name, autofocus: true, class: 'input-default', placeholder: '姓'
              = f.text_field :last_name, autofocus: true, class: 'input-default', placeholder: '名'
            .field.form-group
              = f.label :郵便番号
              %span.form-require
                必須
              %br/
              = f.text_field :postal_code, autofocus: true, class: 'input-default', placeholder: '123-456'
            .field.form-group
              = f.label :都道府県
              %span.form-require
                必須
              %br/
              = f.text_field :prefecture, autofocus: true, class: 'input-default', placeholder: '大阪府'
            .field.form-group
              = f.label :市区町村
              %span.form-require
                必須
              %br/
              = f.text_field :municipality, autofocus: true, class: 'input-default', placeholder: '大阪市阿倍野区相生通り'
            .field.form-group
              = f.label :番地
              %span.form-require
                必須
              %br/
              = f.text_field :address, autofocus: true, class: 'input-default', placeholder: '1-2-3-405'
            .actions
              = f.submit "登録", class: 'btn-default'
= render 'layouts/footer-gray'
